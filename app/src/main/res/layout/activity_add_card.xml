<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddCard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#fff">
        <ImageButton
            android:id="@+id/back_add_card"
            android:layout_width="30dp"
            android:paddingLeft="25dp"
            android:layout_height="match_parent"
            android:background="#fff"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/sora_regular"
            android:background="#fff"
            android:gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:textColor="#000"
            android:textSize="16dp"
            android:text="Add Card"/>
        <TextView
            android:id="@+id/save_card"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/sora_regular"
            android:background="#fff"
            android:gravity="center_vertical"
            android:textAlignment="textEnd"
            android:textColor="@color/blue"
            android:paddingRight="20dp"
            android:textSize="16dp"
            android:text="Save"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/soraBorder"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sora_bold"
        android:background="#fff"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:textColor="#999"
        android:paddingVertical="5dp"
        android:textSize="16dp"
        android:text="Card number"/>
    <LinearLayout
        android:id="@+id/add_debit_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:background="@drawable/shape"
            android:src="@drawable/ic_credit_card_black_24dp"></ImageView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card number"
            android:background="#00000000"
            android:textColor="#000"
            android:padding="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/sora_bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_bold"
                android:background="#fff"
                android:gravity="center_vertical"
                android:textColor="#999"
                android:paddingVertical="5dp"
                android:textSize="16dp"
                android:text="Expiry date"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_bold"
                android:background="#fff"
                android:gravity="center_vertical"
                android:textColor="#999"
                android:paddingVertical="5dp"
                android:textSize="16dp"
                android:text="CVV"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MMYY"
                android:textColor="#000"
                android:padding="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/sora_bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CVV"
                android:textColor="#000"
                android:padding="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/sora_bold"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sora_regular"
        android:background="#fff"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:paddingVertical="5dp"
        android:textSize="15dp"
        android:text="First card will be your primary card"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sora_regular"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:paddingVertical="5dp"
            android:textSize="13dp"
            android:text="Your card may be charged to make sure it's valid. That amount will be automatically refunded."/>
    </LinearLayout>
</LinearLayout>