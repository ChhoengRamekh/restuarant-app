<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soraGray"
    android:orientation="vertical"
    tools:context=".AddPaymentMethod">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#fff">
        <ImageButton
            android:id="@+id/back_add_payment"
            android:layout_width="30dp"
            android:paddingLeft="25dp"
            android:layout_height="match_parent"
            android:background="#fff"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/sora_regular"
            android:background="#fff"
            android:gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:textColor="#000"
            android:textSize="16dp"
            android:text="Add payment methods"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/soraBorder"/>
    <LinearLayout
        android:id="@+id/add_debit_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:background="@drawable/shape"
            android:src="@drawable/ic_credit_card_black_24dp"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credit / debit card"
            android:paddingVertical="10dp"
            android:textColor="#000"
            android:textSize="16dp"
            android:fontFamily="@font/sora_regular"/>
    </LinearLayout>
</LinearLayout>